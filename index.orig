    <script type="text/javascript">  
        $(document).ready(function(){
            $("#annotated tr:odd").addClass("odd");
            $("#annotated tr:not(.odd)").hide();
            $("#annotated tr:first-child").show();
            $("#annotated tr.odd").click(function(){
                $(this).next("tr").toggle();
                $(this).find(".arrow").toggleClass("up");
            });
            //$("#annotated").jExpand();
        });
    </script>

    <script type="text/javascript">  
